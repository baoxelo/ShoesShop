<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cửa hàng giày - @ViewData["Title"]</title>
    <!-- Reset CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" integrity="sha512-NmLkDIU1C/C88wi324HBc+S2kLhi08PN5GDeUVVVC/BVt/9Izdsc9SVeVfA1UZbY3sHUlDSyRXhCzHfr6hmPPw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Lora:wght@600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <script src="https://kit.fontawesome.com/23b49860cf.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Main Stylesheet -->
    <link href="~/css/main.css" rel="stylesheet">
</head>
<body>
    <header>
        <!-- Spinner Start -->
        <div id="spinner" class=" show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <div class="container-fluid fixed-top px-0 wow slideInDown border-bottom shadow" data-wow-delay="0.1s">
            <div class="top-bar row gx-0 align-items-center d-none d-lg-flex">
                <div class="col-lg-6 px-5 text-start">
                    <small><i class="fa fa-map-marker-alt me-2"></i>58, Đường 29, TP. Thủ Đức, Việt Nam</small>
                    <small class="ms-4"><i class="fa fa-envelope me-2"></i>vuqcbao@gmail.com</small>
                </div>
                <div class="col-lg-6 px-5 text-end">
                    <small>Follow us:</small>
                    <a class="text-body ms-3" href=""><i class="fab fa-facebook-f"></i></a>
                    <a class="text-body ms-3" href=""><i class="fab fa-twitter"></i></a>
                    <a class="text-body ms-3" href=""><i class="fab fa-linkedin-in"></i></a>
                    <a class="text-body ms-3" href=""><i class="fab fa-instagram"></i></a>
                </div>
            </div>

            <nav class="navbar navbar-expand-lg navbar-light py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="d-none d-lg-block navbar-brand ms-4 ms-lg-0">
                    <h1 class="fw-bold text-primary m-0">Sh<span class="text-secondary">oe</span>s</h1>
                </a>
                <div class="d-lg-none d-flex justify-content-between align-items-center w-100 ms-2">
                    <div class="d-flex align-items-center mobile-tablet-area">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="d-none d-md-block navbar-brand ms-4 ms-lg-0">
                            <h1 class="fw-bold text-primary m-0">Sh<span class="text-secondary">oe</span>s</h1>
                        </a>
                        <partial name="_LoginPartial"></partial>
                        <partial name="_CartPartial"></partial>
                        <partial name="_SearchPartial"></partial>
                    </div>
                    <button title="Mở rộng" type="button" class="navbar-toggler align-self-center me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                </div>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto p-4 p-lg-0">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Tất cả</a>
                        <a asp-area="" asp-controller="Home" asp-action="men" class="nav-item nav-link">Men</a>
                        <a asp-area="" asp-controller="Home" asp-action="women" class="nav-item nav-link">Women</a>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-item nav-link">Liên Hệ</a>

                    </div>
                    <div class="d-none d-lg-flex ms-2 window-area">
                        <partial name="_SearchPartial"></partial>
                        <partial name="_CartPartial"></partial>
                        <partial name="_LoginPartial"></partial>
                    </div>
                </div>
                
            </nav>
        </div>
        <!-- Navbar End -->
        
    </header>
    <main id="main" role="main" >
        @RenderBody()
    </main>
    <!-- Footer Start -->
    <div style="position: relative" class="container-fluid bg-black footer pt-5 overflow-hidden">
        <div class="wow slideInUp" data-wow-delay="0.1s">
            <div class="container py-5 ">
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="mb-3" style="margin-top: -10px">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand ms-lg-0">
                                <h1 class="fw-bold text-primary m-0">Sh<span class="text-secondary">oe</span>s</h1>
                            </a>
                        </div>
                        <p>Chào mừng bạn đến với cửa hàng giày của chúng tôi - không gian tuyệt vời dành cho những người yêu thời trang và đam mê giày dép. </p>
                        <div class="d-flex py-2 mb-4">
                            <a class="btn btn-square btn-outline-light rounded-circle me-3" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-square btn-outline-light rounded-circle me-3" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-square btn-outline-light rounded-circle me-3" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-square btn-outline-light rounded-circle me-0" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3 mb-md-0">
                        <h4 class="text-light mb-4">Liên hệ</h4>
                        <p><i class="fa fa-map-marker-alt me-3"></i>57 đường 29 Linh Đông Thủ Đức</p>
                        <p><i class="fa fa-phone-alt me-3"></i>+079 899 1358</p>
                        <p><i class="fa fa-envelope me-3"></i>vuqcbao@gmail.com</p>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3 mb-md-0">
                        <h4 class="text-light mb-4">Trợ giúp</h4>
                        <a class="btn btn-link text-decoration-none" href="">Tuyển dụng</a>
                        <a class="btn btn-link text-decoration-none" href="">Hệ thống cửa hàng</a>
                        <a class="btn btn-link text-decoration-none" href="">Liên hệ hợp tác</a>
                        <a class="btn btn-link text-decoration-none" href="">Q & A</a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3 mb-md-0">
                        <h4 class="text-light mb-4">Khám phá</h4>
                        <a class="btn btn-link text-decoration-none" href="">Trẻ em</a>
                        <a class="btn btn-link text-decoration-none" href="">Mem</a>
                        <a class="btn btn-link text-decoration-none" href="">Women</a>
                        <a class="btn btn-link text-decoration-none" href="">Giỏ hàng</a>
                    </div>
                </div>
            </div>
            <div class="container-fluid copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            Copyright &copy; <a href="#">2024 Cửa hàng giày</a>, Powered by Vũ Quốc Bảo.
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                            Designed By <a href="https://www.facebook.com/baoxelo/">Vũ Quốc Bảo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <!-- Footer End -->
    <!-- JavaScript Libraries -->

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script> 
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>

    <!-- Include numeral.js library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/numeral.js/2.0.6/numeral.min.js"></script>

    <!-- Include main.js & site.js-->
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
