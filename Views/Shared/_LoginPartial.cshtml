@using Microsoft.AspNetCore.Identity
@using ShoesShop.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="d-none d-lg-flex ms-2">
    <a class="btn-sm-square bg-white rounded-circle ms-3" href="">
        <span class="fa fa-search text-body"></span>
    </a>
    <a class="btn-sm-square bg-white rounded-circle ms-3" href="">
        <span class="fa fa-shopping-bag text-body"></span>
    </a>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="btn-sm-square bg-white ms-3 dropdown">
            <button class="rounded-circle h-100 w-100 border-0 dropdown-toggle p-0 overflow-hidden" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                @{
                    // Get ID and user
                    var userId = UserManager.GetUserId(User);
                    var user = await UserManager.FindByIdAsync(userId);

                    if (user != null && !string.IsNullOrEmpty(user.Avatar))
                    {
                        <img class="h-100 w-100 object-fit-cover" src="@user.Avatar" alt="User Avatar" />
                    }
                    else
                    {
                        <span class="fa fa-user text-body"></span>
                    }
                }
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Tài khoản</a></li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class=" btn">Đăng xuất</button>
                    </form>
                </li>

            </ul>
        </div>
    }
    else
    {
        <a class="btn-sm-square bg-white rounded-circle ms-3" asp-area="Identity" asp-page="/Account/Login">
            <span class="fa fa-user text-body"></span>
        </a>
    }
</div>

