@model ShoesShop.Models.Product

@{
    ViewData["Title"] = "Delete";
}
<div class="admin-body-wrapper">

    <h1>Xóa sản phẩm</h1>
    <partial name="_StatusMessage" model="@TempData["StatusMessage"]"></partial>
    <div class="col-md-4">
        <img class="w-100 image-wrapper" src="@Html.DisplayFor(model => model.ImageLink)" alt="@Html.DisplayFor(model => model.Name)" />
    </div>
    <hr />
    <div>
        <div class="row">
            <dl class="col-6">
                <dt class="h4">Chi tiết thông tin sản phẩm</dt>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Discount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Discount.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ModifyDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ModifyDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>
            <dl class="col-6">
                <dt class="h4">Size và số lượng sản phẩm</dt>
                @for (var i = 0; i < Model.Items.Count(); i++)
                {
                    <dt class="col-2">
                        <span>Size : @Html.DisplayFor(modelItem => @Model.Items[i].Size.Name)</span>
                    </dt>
                    <dd class="col-10">
                        <span>Còn lại @Html.DisplayFor(modelItem => Model.Items[i].Quantity)</span>
                    </dd>
                }
            </dl>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xóa sản phẩm này" class="btn btn-danger" /> |
            <a asp-action="Index">Quay lại trang quản lí sản phẩm</a>
        </form>
    </div>

</div>